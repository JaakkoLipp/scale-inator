#import UI, data           #only works with aliohjelmas
#illegal goods import
import serial, datetime, sys, random
import time

def serRep(): #replaces serial input for demo
    return round(random.uniform(1,6), 2)

def main():
    """ser = serial.Serial(
        port='/dev/ttyUSB0',\
        baudrate=9600,\
        parity=serial.PARITY_NONE,\
        stopbits=serial.STOPBITS_ONE,\
        bytesize=serial.EIGHTBITS,\
        timeout=0)"""
    previousID = None
    while (True):
        currentID = int(input("Scan ID: "))
        time.sleep(1)

        # read weight from scale
        #weight = ser.readline()
        weight = serRep()

        if currentID == previousID:
            print("SAME AS PREVIOUS,\n NOT ACCEPTED.")
            continue
        print("accepted, %s" % currentID)
        print("WEIGHT WRITTEN SUCCESSFULLY %skg." % weight)
        print()
        previousID = currentID
    #ser.close()

if __name__ == "__main__":
    main()
